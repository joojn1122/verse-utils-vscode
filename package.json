{
  "name": "verse-utils-vscode",
  "displayName": "Verse Utils",
  "description": "Some verse utils for UEFN projects",
  "repository": {
    "type": "github",
    "url": "https://github.com/joojn1122/verse-utils-vscode"
  },
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Snippets"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "icon": "./VersePlus.png",
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "verse-utils.verse-usings",
        "title": "Verse Default Usings"
      },
      {
        "command": "verse-utils.enum-str",
        "title": "Verse Enum ToString"
      },
      {
        "command": "verse-utils.exlude-nonverse",
        "title": "Exclude non Verse folders"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Verse Utils",
      "properties": {
        "verse-utils.excludeEmptyFolders": {
          "type": "boolean",
          "default": false,
          "description": "If you want to exclude empty folders"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.91.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  },
  "publisher": "joojn"
}
